<template>
  <div id="login">
    <!-- header -->
    <div class="" id="header">
      <img src="~assets/images/common/logo.png" />
      疫情防控分析系统
    </div>

    <div class="earth"></div>

    <!-- login -->
    <div class="" id="login-container">
      <div class="title">登录</div>

      <!-- 用户名 -->
      <div class="login-item">
        <span>用户名</span>
        <input
          type="text"
          id="account"
          v-model="account"
          placeholder="用户名"
          autocomplete="off"
        />
      </div>

      <!-- 密码 -->
      <div class="login-item">
        <span>密码</span>
        <input
          type="password"
          id="password"
          v-model="password"
          placeholder="密码"
          autocomplete="off"
        />
      </div>

      <span id="forget">忘记密码？</span>

      <!-- 登录按钮 -->
      <div id="login-button" @click="loginEvent">登录</div>
      <div id="tip">用户名或密码有误，请重新输入</div>
    </div>
  </div>
</template>

<script>
export default {
  name: "login",
  data() {
    return {
      account: "",
      password: "",
    };
  },
  methods: {
    inputEvent(type) {
      switch (type) {
        case "account":
          this.account = "";
          break;
        case "password":
          let passwordEle = document.getElementById("password");
          let inputType = passwordEle.type == "password" ? "text" : "password";
          passwordEle.type = inputType;
          break;
      }
    },

    // 登录
    loginEvent() {
      this.$router.push("/hotMap");
    },
  },
  destroyed() {},
};
</script>

