<template>
  <div class="container">
    <!-- 标题栏 -->
    <div class="title">
      结果列表
      <span id="user-id">用户ID: {{ userID }}</span>
      <span id="close-list" @click="closeResultListEvent"></span>
    </div>

    <!-- 表格 -->
    <div class="table">
      <el-table :data="list" height="100%">
        <el-table-column prop="geo_num" label="点位编码"></el-table-column>
        <el-table-column prop="track_time" label="时间"></el-table-column>
        <el-table-column label="操作" width="100">
          <template slot-scope="scope">
            <el-button @click="handleClick(scope.row)" type="text" size="small"
              >查看</el-button
            >
          </template>
        </el-table-column>
      </el-table>
    </div>
  </div>
</template>

<script>
export default {
  data() {
    return {
      list: [],
      userID: "",
      tableHeight: "100%",
    };
  },
  props: ["data"],
  watch: {
    data(newVal, oldVal) {
      this.handleData(newVal);
    },
  },
  created() {
    this.handleData(this.data);
  },
  methods: {
    handleClick(row) {
      console.log(row);
      this.$emit('reviewGrid', row);
    },

    handleData(newVal) {
      let hasKey = Object.keys(newVal).length != 0;
      this.userID = hasKey ? newVal.track_id : "";
      this.list = hasKey ? newVal.list : [];
    },

    closeResultListEvent() {
      this.$emit("displayResult", false);
    },
  },
};
</script>

