input[type="checkbox"]{
  width:15px;
  height:15px;
  line-height: 15px;
  display: inline-block;
  text-align: center;
  position: relative;
  cursor: pointer;
  vertical-align: middle;
  /* margin-left: 5px; */
}
input[type="checkbox"]::before{
  content: "";
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgb(11,39,70);
  border: 1px solid rgb(15,106,148);
}
input[type="checkbox"]:checked::before{
  content: "";
  background: url("../images/common/blueSelected.png") no-repeat;
  background-size: 100% 100%;
  background-color: rgb(11,39,70);
  position: absolute;
  top: 0;
  left: 0;
  width:100%;
  height: 100%;
  border: 1px solid rgb(15,106,148);
  font-size: 15px;
  font-weight: bold;
}

/* -moz代表firefox浏览器私有属性
-ms代表IE浏览器私有属性
-webkit代表chrome、safari私有属性
-o-代表opera浏览器私有属性 */
input::-webkit-input-placeholder{
  color:#bfbfbf;
}
input:-moz-placeholder{
  color:#bfbfbf;
}
input::-moz-placeholder{
  color:#bfbfbf;
}
input:-ms-input-placeholder{
  color:#bfbfbf;
}
