*,
*::before,
*::after {
  padding: 0;
  margin: 0;
  box-sizing: border-box;
  -webkit-box-sizing: border-box;
  /* 点击时的高亮颜色 */
  /* tap-highlight-color: rgba(3, 195, 255, 1); */
  -webkit-tap-highlight-color: rgba(3, 195, 255, 1);
}

ul, ol {
  list-style: none;
}

a {
    text-decoration: none;
    color: #444;
}

input, textarea {
    /* border: none;
    outline: none; */
    /* 不允许手动改变尺寸 */
    resize: none;
    /* 元素的外观 */
    /* -webkit-appearance: none; */
}

.m_l10 {
    margin-left: 10px;
}

.m_r10 {
    margin-right: 10px;
}

.m_t10 {
    margin-top: 10px;
}

.m_b10 {
    margin-bottom: 10px;
}

/* 清除浮动 */
.clear_fix::before,
.clear_fix::after {
    content: '';
    display: block;
    visibility: hidden;
    height: 0;
    line-height: 0;
    clear: both;
}